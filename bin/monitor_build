#!/bin/bash

# Usage example:
#> bin/monitor_build
#
# Cross compile (Unix):
#> GOOS=linux GOARCH=amd64 bin/monitor_build
#
# Cross compile (OSX):
#> GOOS=darwin GOARCH=amd64 bin/monitor_build
#
# Cross compile (Windows):
#> GOOS=windows GOARCH=amd64 bin/monitor_build
#
# Check if program has dynamic libraries:
#> readelf -d /build/fake/mysterium_monitor

source bin/helpers/functions.sh
source bin/helpers/load_environment.sh

export GOOS=${GOOS:=`go env GOHOSTOS`}
export GOARCH=${GOARCH:=`go env GOHOSTARCH`}
export GOBIN=`pwd`/build/monitor
echo "Compiling 'mysterium_fake' for '$GOOS/$GOARCH'.."

go install -ldflags="$(get_linker_ldflags)" mysterium_monitor.go
if [ $? -ne 0 ] ; then
    printf "\e[0;31m%s\e[0m\n" "Compile failed!"
    exit 1
fi

exit 0